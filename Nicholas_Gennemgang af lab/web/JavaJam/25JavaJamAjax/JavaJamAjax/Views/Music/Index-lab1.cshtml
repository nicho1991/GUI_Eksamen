@{
    ViewBag.Title = "Music";
}

<div class="row">
    <div class="col-md-12">
        <p>&nbsp;</p>
    </div>
</div>
<div class="row">

    <div class="col-md-10 col-md-offset-1">
        <p>
            The first Friday night each month at JavaJam is a special night. Join us from 8pm to 11pm
            for some music you won&rsquo;t want to miss!
        </p>
        <h2>January</h2>
        <div class="row">
            <div class="col-md-2 col-md-offset-2">
                <a id="melaniethumb" href="/Images/melanie.jpg">
                    <img src="/Images/melaniethumb.jpg" class="thumbnail" height="80" width="80" alt="Melanie Morris" />
                </a>
            </div>
            <div class="col-md-6 ">
                Melanie Morris entertains with her melodic folk style.
                Check out the podcast! CDs are now available.
            </div>
            <div id="malanieModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Melanie Morris</h4>
                        </div>
                        <div class="modal-body">
                            <img src="/Images/melanie.jpg" height="275" width="275" alt="Melanie Morris" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
            <h2>February</h2>
        
        <div class="row">
            <div class="col-md-2 col-md-offset-2">
                <a id="gregthumb" href="/Images/greg.jpg">
                    <img src="/Images/gregthumb.jpg" alt="Tahoe Greg" class="thumbnail" style="width:80px;height:80px">
                </a>
            </div>
            <div class="col-md-6">
                <p>Tahoe Greg&rsquo;s back from his tour. New songs. New stories. CDs are now available.</p>
            </div>
            <div id="gregModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Tahoe Greg</h4>
                        </div>
                        <div class="modal-body">
                            <img src="/Images/greg.jpg" height="275" width="275" alt="Tahoe Greg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="/Scripts/music-lab1.js"></script>
}


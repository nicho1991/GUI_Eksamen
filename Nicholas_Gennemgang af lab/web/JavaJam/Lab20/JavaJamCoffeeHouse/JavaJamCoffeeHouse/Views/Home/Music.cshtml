        //footerNode.innerHTML = newHtml;

        //2. assignment
        var firstP = document.getElementById("content").firstElementChild;
        firstP.addEventListener("mouseover", function () {
            alert('Conserts sell out quickly so act fast!');
        });

        //3. assignment
        var melanieA = document.getElementById("melaniethumb");
        melanieA.addEventListener("click", function (event) {
            event.preventDefault();
            var newWin = window.open(melanieA.href);
        });

        var gregA = document.getElementById("gregthumb");
        gregA.addEventListener("click", function (event) {
            var newWin = window.open(gregA.href);
            setTimeout(closeWindow, 2000);
            event.preventDefault();
            function closeWindow() {
                newWin.close();
            }
        });

    </script>
}
</body>

